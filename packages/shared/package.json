{
  "name": "@hunthub/shared",
  "version": "1.0.0",
  "description": "Shared types, validation, and constants for HuntHub",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "default": "./dist/schemas/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "generate": "npm run generate:types && npm run generate:zod",
    "generate:types": "ts-node scripts/generate.ts",
    "generate:zod": "openapi-zod-client ./openapi/hunthub_models.yaml -o ./src/schemas/gen/index.ts --export-schemas --strict-objects && node scripts/fix-schemas.js",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "openapi-zod-client": "^1.18.3",
    "swagger-typescript-api": "^13.0.3",
    "ts-node": "^10.9.1",
    "ts-to-zod": "^3.0.0",
    "typescript": "^5.3.3"
  }
}
