---
import PromptForm from './PromptForm.astro';
import PhoneMockup from './PhoneMockup.astro';
---

<section class="hero-gradient min-h-screen pt-44 px-6 pb-16">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col lg:flex-row items-center justify-center gap-12 lg:gap-32">
      <!-- Left: Title + Form -->
      <div class="flex-1 max-w-xl text-center">
        <h1 class="font-display text-5xl md:text-6xl font-semibold text-foreground mb-6">
          Create treasure hunts
          <span class="text-primary block">in minutes</span>
        </h1>

        <p class="text-lg text-foreground-muted mb-10">
          Describe your idea and let AI generate an interactive treasure hunt.
          Perfect for birthdays, team building, or outdoor adventures.
        </p>

        <PromptForm />
      </div>

      <!-- Right: Phone -->
      <div class="hidden lg:flex items-center">
        <PhoneMockup src="/images/Screen-1.webp" alt="HedgeHunt app showing a quiz challenge" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero-gradient {
    background:
      radial-gradient(
        ellipse 80% 60% at 10% 20%,
        rgba(212, 175, 53, 0.45) 0%,
        transparent 50%
      ),
      radial-gradient(
        ellipse 70% 80% at 90% 80%,
        rgba(182, 89, 27, 0.4) 0%,
        transparent 55%
      ),
      radial-gradient(
        ellipse 50% 40% at 80% 15%,
        rgba(212, 165, 116, 0.35) 0%,
        transparent 45%
      ),
      radial-gradient(
        ellipse 60% 50% at 20% 85%,
        rgba(193, 122, 58, 0.3) 0%,
        transparent 50%
      ),
      linear-gradient(
        145deg,
        var(--hh-grey-50) 0%,
        var(--hh-background-default) 50%,
        var(--hh-background-surface) 100%
      );
  }
</style>
