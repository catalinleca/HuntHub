---
import PromptForm from './PromptForm.astro';
import PhoneMockup from './PhoneMockup.astro';

const phoneImages = [
  { src: '/images/Screen-1.webp', alt: 'HedgeHunt app showing a quiz challenge' },
  { src: '/images/Screen-2.webp', alt: 'HedgeHunt app showing a location step' },
  { src: '/images/Screen-3.webp', alt: 'HedgeHunt app showing hunt completion' },
];
---

<section class="hero-gradient min-h-screen pt-44 px-6 pb-16">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col lg:flex-row items-center justify-center gap-12 lg:gap-28">
      <!-- Left: Title + Form -->
      <div class="flex-1 max-w-2xl text-center">
        <h1 class="font-display text-5xl lg:text-6xl font-semibold text-foreground mb-6">
          <span class="md:whitespace-nowrap">Create treasure hunts</span><br />
          <span class="text-primary">in minutes</span>
        </h1>

        <p class="text-lg text-foreground-muted mb-10">
          Describe your idea and let AI generate an interactive treasure hunt. Perfect for birthdays, team building, or
          outdoor adventures.
        </p>

        <PromptForm />
      </div>

      <!-- Right: Phone -->
      <div class="hidden lg:flex items-center">
        <PhoneMockup images={phoneImages} />
      </div>
    </div>
  </div>
</section>

<style>
  .hero-gradient {
    background:
      radial-gradient(
        ellipse 80% 60% at 10% 20%,
        color-mix(in srgb, var(--hh-accent-main) 45%, transparent) 0%,
        transparent 50%
      ),
      radial-gradient(
        ellipse 70% 80% at 90% 80%,
        color-mix(in srgb, var(--hh-primary-main) 40%, transparent) 0%,
        transparent 55%
      ),
      radial-gradient(
        ellipse 50% 40% at 80% 15%,
        color-mix(in srgb, var(--hh-grey-300) 35%, transparent) 0%,
        transparent 45%
      ),
      radial-gradient(
        ellipse 60% 50% at 20% 85%,
        color-mix(in srgb, var(--hh-accent-light) 30%, transparent) 0%,
        transparent 50%
      ),
      linear-gradient(145deg, var(--hh-grey-50) 0%, var(--hh-background-default) 50%, var(--hh-background-surface) 100%);
  }
</style>
