---
import './PlayerExperience.styles.css';
import PhoneMockup, { type PhoneImage } from '../PhoneMockup/PhoneMockup.astro';

const phoneImages: PhoneImage[] = [
  { src: '/images/Screen-2.webp', alt: 'Player following a clue' },
  { src: '/images/Screen-3.webp', alt: 'Player completing a challenge' },
];

const features = [
  'No app to download — works in any browser',
  'Step-by-step clues with photos, riddles, and locations',
  'Works anywhere with an internet connection',
];
---

<section class="player-section py-20 px-6">
  <div class="max-w-5xl mx-auto">
    <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
      <div class="flex-1 text-center lg:text-left">
        <h2 class="font-display text-3xl lg:text-4xl font-semibold text-foreground mb-6">Players just tap and play</h2>

        <p class="text-lg text-foreground-muted mb-8">
          One link, no app to download. Players follow clues step by step — solving riddles, finding spots, snapping
          photos along the way. It runs right in their browser, so they're hunting in seconds.
        </p>

        <ul class="space-y-3">
          {
            features.map((feature) => (
              <li class="flex items-start gap-3 text-foreground-muted">
                <span class="text-primary mt-1">✓</span>
                <span>{feature}</span>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="flex-1 flex justify-center lg:justify-end">
        <div class="phone-wrapper">
          <PhoneMockup images={phoneImages} />
        </div>
      </div>
    </div>
  </div>
</section>
