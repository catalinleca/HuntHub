---
import './Hero.styles.css';
import PromptForm from '../PromptForm/PromptForm.astro';

const editorUrl = import.meta.env.PUBLIC_EDITOR_URL || 'https://build.hedgehunt.app';
---

<section class="hero-gradient min-h-screen pt-32 px-6 pb-16 flex items-center">
  <div class="w-full max-w-5xl mx-auto text-center">
    <h1 class="font-display text-5xl lg:text-6xl font-semibold text-foreground mb-6 max-w-3xl mx-auto">
      Create a treasure hunt
      <br />
      <span class="text-primary">made just for them</span>
    </h1>

    <p class="text-lg text-foreground-muted mb-10 max-w-2xl mx-auto">
      HedgeHunt turns your idea into a playful adventure with clues, locations, and challenges. Personalize it, share a
      link, and watch them play.
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-3 mb-8">
      <a
        href={editorUrl}
        class="bg-primary hover:bg-primary-dark text-white px-6 py-3 rounded-full font-medium whitespace-nowrap"
      >
        Create a hunt
      </a>
      <a
        href="#how-it-works"
        class="text-foreground hover:text-primary px-6 py-3 rounded-full border border-divider whitespace-nowrap"
      >
        See how it works
      </a>
    </div>

    <p class="text-sm text-foreground-muted mb-6 max-w-2xl mx-auto">
      Perfect for birthdays, proposals, friend groups, classrooms, and community events.
    </p>

    <PromptForm />
  </div>
</section>
