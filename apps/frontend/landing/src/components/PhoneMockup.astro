---
interface Props {
  images: { src: string; alt: string }[];
}

const { images } = Astro.props;

const SLIDE_DURATION = 3;
const cycleDuration = images.length * SLIDE_DURATION;
---

<div class="phone-device" style={`--cycle-duration: ${cycleDuration}s;`}>
  <div class="phone-frame">
    <!-- Side buttons -->
    <div class="btn-left-top"></div>
    <div class="btn-left-bottom"></div>
    <div class="btn-right"></div>

    <!-- Screen -->
    <div class="phone-screen">
      <!-- Dynamic Island inside screen -->
      <div class="dynamic-island"></div>
      <div class="slideshow">
        {
          images.map((image, index) => (
            <img src={image.src} alt={image.alt} class="slide" style={`animation-delay: ${index * SLIDE_DURATION}s;`} />
          ))
        }
      </div>
    </div>
  </div>

  <!-- Dot indicators -->
  <div class="dots">
    {images.map((_, index) => <span class="dot" style={`animation-delay: ${index * SLIDE_DURATION}s;`} />)}
  </div>
</div>

<style>
  .phone-device {
    filter: drop-shadow(0 25px 50px rgba(0, 0, 0, 0.25));
  }

  .phone-frame {
    position: relative;
    width: 280px;
    height: 572px;
    background: #1f1f1f;
    border-radius: 50px;
    padding: 12px;
    box-sizing: border-box;
  }

  .phone-screen {
    position: relative;
    width: 100%;
    height: 100%;
    background: #fff;
    border-radius: 38px;
    overflow: hidden;
  }

  .dynamic-island {
    position: absolute;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
    width: 95px;
    height: 26px;
    background: #000;
    border-radius: 20px;
    z-index: 10;
  }

  .slideshow {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
    opacity: 0;
    animation: slideshow var(--cycle-duration) infinite;
  }

  @keyframes slideshow {
    0% {
      opacity: 0;
    }
    5% {
      opacity: 1;
    }
    33% {
      opacity: 1;
    }
    38% {
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }

  .dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 16px;
  }

  .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--hh-grey-400);
    animation: dot-pulse var(--cycle-duration) infinite;
  }

  @keyframes dot-pulse {
    0% {
      background: var(--hh-grey-400);
      transform: scale(1);
    }
    5% {
      background: var(--hh-primary-main);
      transform: scale(1.2);
    }
    33% {
      background: var(--hh-primary-main);
      transform: scale(1.2);
    }
    38% {
      background: var(--hh-grey-400);
      transform: scale(1);
    }
    100% {
      background: var(--hh-grey-400);
      transform: scale(1);
    }
  }

  /* Side buttons */
  .btn-left-top {
    position: absolute;
    left: -3px;
    top: 100px;
    width: 3px;
    height: 32px;
    background: #1f1f1f;
    border-radius: 2px 0 0 2px;
  }

  .btn-left-bottom {
    position: absolute;
    left: -3px;
    top: 140px;
    width: 3px;
    height: 50px;
    background: #1f1f1f;
    border-radius: 2px 0 0 2px;
  }

  .btn-right {
    position: absolute;
    right: -3px;
    top: 120px;
    width: 3px;
    height: 50px;
    background: #1f1f1f;
    border-radius: 0 2px 2px 0;
  }
</style>
