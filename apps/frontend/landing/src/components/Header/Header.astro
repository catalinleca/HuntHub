---
import './Header.styles.css';
import { EDITOR_URL } from '../../config/urls';
---

<header class="fixed top-0 left-0 right-0 z-50 px-6 py-4">
  <nav
    class="navbar max-w-6xl mx-auto flex flex-col sm:flex-row items-center justify-between px-6 py-3 rounded-2xl gap-3"
  >
    <a href="/" class="flex items-center gap-2">
      <img src="/images/logo.svg" alt="" class="h-6 w-auto" aria-hidden="true" />
      <span class="font-display text-xl font-semibold text-foreground">HedgeHunt</span>
    </a>

    <div class="flex items-center gap-3">
      <a
        href={EDITOR_URL}
        class="login-btn text-foreground-muted hover:text-foreground px-4 py-2 rounded-xl transition-all"
      >
        Log in
      </a>
      <a href={EDITOR_URL} class="cta-button text-white font-medium px-4 py-2 rounded-xl whitespace-nowrap">
        Create a hunt
      </a>
    </div>
  </nav>
</header>
